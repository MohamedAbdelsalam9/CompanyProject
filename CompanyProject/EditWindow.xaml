<Window x:Class="CompanyProject.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyProject"
        mc:Ignorable="d"
        Title="Edit Item" Width="326.2" MaxWidth="500" MinWidth="300" MinHeight="200" Height="400">
    <Grid x:Name="MainGrid" Margin="10">
        <ScrollViewer x:Name="ScrollViewerPanel" Margin="0,0,0,59">
            <StackPanel x:Name="SP" VerticalAlignment="Top" Margin="10,0"/>
        </ScrollViewer>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,12" VerticalAlignment="Bottom" Width="75" Height="25" Click="CancelButton_Click"/>
        <Button x:Name="CommitButton" Content="Commit" HorizontalAlignment="Right" Margin="0,0,10,12" VerticalAlignment="Bottom" Width="100" Height="25" Click="CommitButton_Click"/>
    </Grid>
</Window>
